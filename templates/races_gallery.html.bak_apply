<!DOCTYPE html>
<html>
<head>
  <title>Races Gallery</title>

   <link rel="stylesheet" href="{{ url_for('static', filename='css/gallery.css') }}">

</head>
  <title>Races Gallery</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/gallery.css') }}">
<body>
  <h1>Races Gallery</h1>

  {% for kin, races in tree.items() %}
    <h2>{{ kin }}</h2>
    <div class="gallery">
      {% for race, subraces in races.items() %}
        {% for entry in subraces %}
          <div class="card">
            <h3>{{ entry.subrace }}</h3>
            <div class="toggle" onclick="this.parentElement.classList.toggle('open')">
              <span class="arrow">▶</span> {{ race }}
            </div>
            <div class="stats">
            {% for stat in entry.stats %}
  <div><strong>{{ stat[0] }}</strong>: {{ stat[1] }}</div>
{% endfor %}
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  {% endfor %}

  <br>
  <a href="/">← Back to Home</a>
</body>
</html>