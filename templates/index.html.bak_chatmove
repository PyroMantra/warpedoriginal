<!DOCTYPE html>
<html>
<head>
  <title>RPG Admin Panel</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; }
    ul { list-style-type: none; padding: 0; }
    li { margin-bottom: 10px; }
    .button {
      display: inline-block;
      padding: 8px 16px;
      background: #333;
      color: white;
      text-decoration: none;
      border-radius: 6px;
    }
    .button:hover {
      background: #555;
    }
  </style>
<link rel="stylesheet" href="{{ url_for('static', filename='chat.css') }}">
</head>
<body>
  <h1>{{ current_user_name }}</h1>

  <h2>Game Database</h2>
  <ul>
    {% for sheet in sheets %}
      <li><a class="button" href="{{ url_for('view_sheet', sheet=sheet) }}">{{ sheet }}</a></li>
    {% endfor %}
  </ul>

  {% if show_potion_button %}
    <hr>
    <h2>Tools</h2>
    <a class="button" href="{{ url_for('potion_generator') }}">ðŸ§ª Open Potion Generator</a>
  {% endif %}

  <br><br>
  <a href="{{ url_for('logout') }}">Log out</a>
<!-- Global Chat Panel -->
<div id="global-chat">
  <div class="chat-header">Global Chat</div>
  <div id="chat-messages"></div>
  <form id="chat-form">
    <input id="chat-input" type="text" placeholder="Message the world..." autocomplete="off" />
    <button id="chat-send" type="submit">Send</button>
  </form>
</div>
<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<script>window.CURRENT_USER_NAME = "{{ current_user_name }}";</script>
<script src="{{ url_for('static', filename='chat.js') }}"></script>
</body>
</html>